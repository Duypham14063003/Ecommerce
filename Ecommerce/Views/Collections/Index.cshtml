
@{
    ViewBag.Title = "CÀ PHÊ TẠI NHÀ - The coffee house";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<style>
    .slide {
        margin-top: -16px;
    }

    .home-content {
        height: auto;
        display: flex;
        justify-content: center;
        padding-bottom: 24px;
    }

    /*card*/
    .detail-image {
        border-radius: 15px;
        height: 280px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

    .card-home {
        width: 250px;
        display: flex;
        flex-direction: column;
    }

    .banner {
        height: 330px;
        border-radius: 15px;
    }

    /*test*/
    table tr {
    }

        table tr td {
            padding: 10px;
            transition: all ease-in-out 0.5s;
            cursor: pointer
        }

            table tr td:hover {
                opacity: 0.5;
            }

    /*gioi thieu*/
    .gioi-thieu {
        height: 400px;
        width: 100%;
        background-image: url('../../images/anh.png');
        background-repeat: no-repeat;
        background-size: cover;
        border-radius: 25px;
        transition: all ease-in-out 0.5s;
        cursor: pointer;
    }

        .gioi-thieu:hover {
            transform: scale(1.1);
        }

    /*blog*/
    .blog {
        background-color: #FFF7E6;
        height: auto;
        width: 100%;
    }

    .tieude {
        padding-left: 10px;
        border-left: 5px solid #ea8025;
        transition: all ease-in-out 0.5s;
        cursor: pointer;
    }

        .tieude:hover {
            color: #ea8025;
        }

    .container-blog-table {
        display: flex;
        justify-content: center;
    }

    .card-img-top {
        border-radius: 15px;
        margin-bottom: 10px;
        transition: all ease-in-out 0.5s;
    }

        .card-img-top:hover {
            transform: scale(1.1)
        }
</style>

<div class="container mt-5">
    <h2 class="mb-5">
        Cà Phê Tại Nhà
    </h2>
    <table class="menu-home" style="border-spacing:12px;width:50%">
        <tbody>
            <tr>
                <td>
                    <div class="card-home">
                        <img class="detail-image" src="~/Images/cafe.png" alt="#" />
                        <a style="font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">The Coffe House Sữa Đá</a>
                        <span style="color:#ccc">69.000đ</span>
                    </div>
                </td> 
            </tr>
        </tbody>
    </table>
</div>



